<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_order"
        android:id="@+id/current_order" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/current_order_list"
            android:layout_below="@+id/current_order"
            android:layout_alignParentStart="true">
        </ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_history"
        android:id="@+id/order_history"
        android:layout_alignBottom="@+id/current_order_list"
        android:layout_alignParentStart="true" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/order_history_list"
        android:layout_below="@+id/current_order_list"
        android:layout_alignParentStart="true">
    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:src="@drawable/ic_thumbs_up_down_24dp"
        android:layout_alignParentBottom="true"
        android:background ="@color/colorFloatingButton"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>